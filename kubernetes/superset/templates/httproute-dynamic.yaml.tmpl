kind: HTTPRoute
apiVersion: gateway.networking.k8s.io/v1
metadata:
  name: superset
  labels:
    gateway: gpotools
spec:
  # this connects us to the gateway
  parentRefs:
  - kind: Gateway
    name: gpotools
    namespace: default
    sectionName: http
  hostnames:
  - "${hostname}"
  rules:
  - backendRefs:
    - name: superset
      port: 8088
